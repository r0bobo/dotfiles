#!/bin/bash
set -euo pipefail

IFS=: read -r -a dirs <<< "$PROJECTPATH"
flags=("${dirs[@]/#/--search-path=}")

if ! proj_path="$(fd "${flags[@]}" --type=directory --hidden --glob '**/.git' 2>/dev/null \
	| xargs -l dirname \
	| fzf --header=Projects --preview="ls --color=always {}" --preview-window=up --height=30 --prompt='PROJ> ')"; then
	exit 0
fi

for dir in "${dirs[@]}"; do
	[[ $proj_path == $dir* ]] && proj_name="${proj_path#"$dir/"}"
done

cd "$proj_path"
tm "${proj_name/./-}"
