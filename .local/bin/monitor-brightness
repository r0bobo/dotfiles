#!/usr/bin/env bash

set -euo pipefail

if [[ $# = 0 ]]; then
    cat <<EOF
Usage: monitor-brightness [NUMBER]
EOF
    exit 0
fi

if (("$1" >= 25 && "$1" <= 100)); then
    sudo ddcutil --bus=9 setvcp 10 "$1"
    sudo ddcutil --bus=9 setvcp 12 "$1"
else
    cat <<EOF
ERROR: Enter number between 25 - 100
EOF
    exit 1
fi
