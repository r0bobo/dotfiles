;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[bar/top]
inherit = bar/base

modules-center = xwindow
modules-right = pkgupdate volume xbacklight wlan battery date clock

;override-redirect = true

;scroll-up = i3-desknext
;scroll-down = i3-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/xwindow]
inherit = module/base
type = internal/xwindow
label = %title:0:30:...%


[module/pkgupdate]
inherit = module/base
type = custom/script

interval = 1200
format = <label>
label = %output%
exec = ~/.config/polybar/pkgupdate.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
click-left = exec termite -e "pacaur -Syu" &


[module/volume]
inherit = module/base
type = internal/volume

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

format-muted = <label-muted>
format-muted-foreground = ${colors.foreground-inactive}
label-muted = 
; label-muted-font = 4

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-foreground = ${colors.foreground}


[module/xbacklight]
inherit = module/base
type = internal/xbacklight

format = <label>
label = %{T4}%{T-} %percentage%%


[module/wlan]
inherit = module/base
type = internal/network

interface = wlp1s0
interval = 3.0

format-connected = <label-connected>
label-connected =  %essid%

format-disconnected = <label-disconnected>
label-disconnected = %{T4}%{T-}


[module/battery]
inherit = module/base
type = internal/battery

battery = BAT0
adapter = AC0
full-at = 95

format-charging = <label-charging>
label-charging =  %percentage%%
label-charging-foreground = ${colors.battery_charging}

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%

format-full = <label-full>
label-full =  full

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.battery_low}
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
; ramp-capacity-font = 5
ramp-capacity-foreground = ${colors.foreground}


[module/date]
inherit = module/base
type = internal/date

label = %{T4}%{T-} %date%


[module/clock]
inherit = module/base
type = internal/date

label = %{T4}%{T-} %time%


; vim:ft=dosini
