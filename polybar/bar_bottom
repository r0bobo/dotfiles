;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[bar/bottom]
inherit = bar/base


modules-left = i3
; modules-center = i3_mode
modules-right = network_speed diskspace memory cpu


; tray-position = right
; tray-padding = 2
; tray-transparent = false
;tray-background = #0063ff

;override-redirect = true

;scroll-up = i3-desknext
;scroll-down = i3-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

bottom = true


[module/i3]
inherit = module/base
type = internal/i3

; strip-wsnumbers = true

format = <label-state> <label-mode>

label-focused = %name%
label-focused-foreground = ${colors.workspace_occupied}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-visible = %name%
label-visible-background = ${colors.workspace_alert}
label-visible-padding = 1

label-urgent = %name%
label-urgent-padding = 1


[module/cpu]
inherit = module/base
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5
label = CPU %percentage:2%%


[module/network_speed]
inherit = module/base
type = internal/network

interface = wlp1s0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = %downspeed:9% %upspeed:9%
label-disconnected = 


[module/memory]
inherit = module/base
type = internal/memory

format = <label>
label = RAM %gb_used%


[module/diskspace]
inherit = module/base
type = internal/fs

mount-0 = /

format-mounted = <label-mounted>

label-mounted = %used% / %total%


[module/i3_mode]
inherit = module/base
type = internal/i3

; strip-wsnumbers = true

format = <label-mode>
label-mode = %mode%



; vim:ft=dosini
