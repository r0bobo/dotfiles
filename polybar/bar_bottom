[bar/bottom]
inherit = bar/base


modules-left = i3
; modules-center = xwindow
; modules-right = pkgupdate volume xbacklight wlan battery date clock


tray-position = right
tray-padding = 2
tray-transparent = false
;tray-background = #0063ff

;override-redirect = true

;scroll-up = i3-desknext
;scroll-down = i3-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

bottom = true

[module/i3]
inherit = module/base
type = internal/i3

; ws-icon-0 = term;
; ws-icon-1 = web;
; ws-icon-2 = atom;
; ws-icon-default = 

label-focused = %index%
label-focused-background = ${colors.background-right}
label-focused-foreground = ${colors.workspace_occupied}
label-focused-padding = 1

label-occupied = %index%
label-occupied-foreground = ${colors.workspace_occupied}
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-padding = 1

; [module/pkgupdate]
; inherit = module/base
; type = custom/script
; interval = 1200
; format = <label>
; format-padding = 2
; label = %output%
; exec = ~/.config/polybar/pkgupdate.sh
; exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
; click-left = exec termite -e "pacaur -Syu" &

